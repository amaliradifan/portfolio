generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Stack {
  id       String  @id @default(uuid()) @map("_id")
  name     String
  image    String?
  category String?
}

model Project {
  id          String  @id @default(uuid()) @map("_id")
  name        String
  position    String?
  link        String?
  github      String?
  image       String?
  description String?
  date        String?
  isCompleted Boolean @default(false)
}

model Certification {
  id          String    @id @default(uuid()) @map("_id")
  name        String
  description String?
  credentials String?
  stateDate   DateTime?
  endDate     DateTime?
  image       String?
}

